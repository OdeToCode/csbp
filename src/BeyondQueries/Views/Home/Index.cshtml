@using System.Threading.Tasks
@using BeyondQueries.Models.Data
@model BeyondQueries.Models.Data.Movie
@{
    ViewData["Title"] = "Home Page";
}


<h2>Movie Evaluator</h2>

<h3 id="output" class="text-info"></h3>


<form>
    <fieldset>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Length"></label>
            <input asp-for="Length" class="form-control" />
            <span asp-validation-for="Length"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReleaseDate"></label>
            <input asp-for="ReleaseDate" class="form-control" />
            <span asp-validation-for="ReleaseDate"></span>
        </div>

        <p>
            <input id="submitMovie" type="submit" value="Create" class="btn btn-primary" />
        </p>
    </fieldset>
</form>

@section scripts {
    <script src="~/js/MovieEvaluate.js" type="text/javascript"></script>
}
